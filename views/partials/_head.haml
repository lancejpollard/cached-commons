/ meta
%meta{:content => "text/html; charset=iso-8859-1", "http-equiv" => "Content-Type"}/
%meta{'http-equiv' =>"X-UA-Compatible", :content => "IE=EmulateIE7"}
%meta{:name => "author", :content => "#{c("metadata.author")}"}/
%meta{:name => "copyright", :content => "#{c("metadata.copyright")}"}/
%meta{:name => "classification", :content => "#{c("metadata.classification")}"}/
%meta{:name => "country", :content => "#{c("metadata.country")}"}/
%meta{:name => "keywords", :content => "#{c("metadata.keywords")}"}/
%meta{:name => "description", :content => "#{c("metadata.description")}"}
%meta{:name => "robots", :content => "index follow"}
%meta{:name => "apple-mobile-web-app-capable", :content => "yes"}/
%meta{:name => "apple-touch-fullscreen", :content => "yes"}/
= yield_content :meta_head

/ stylesheets
%link{:href => "#{cache_root}/stylesheets/jquery/jquery.prettyCheckboxes-1.1-min.css", :rel => "stylesheet", :type => "text/css"}/
%link{:href => "/application.css", :rel => "stylesheet", :type => "text/css"}/
= yield_content :stylesheet_head

/ javascripts
-# %script{ :type => "text/javascript", :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" }
%script{ :type => "text/javascript", :src => "#{cache_root}/javascripts/jquery/jquery-1.4.2-min.js" }
%script{ :type => "text/javascript", :src => "#{cache_root}/javascripts/jquery/jquery.prettyCheckboxes-1.1-min.js" }
%script{ :type => "text/javascript", :src => "#{cache_root}/javascripts/jquery/jquery.form-2.4.3-min.js" }
%script{ :type => "text/javascript", :src => "/application.js" }
= yield_content :javascript_head

